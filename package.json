{
  "name": "speak-strong-monorepo",
  "version": "2.3.0",
  "private": true,
  "description": "Monorepo for Speak Strong - transform weak language into confident communication",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jvalentini/speak-strong.git"
  },
  "homepage": "https://github.com/jvalentini/speak-strong#readme",
  "bugs": {
    "url": "https://github.com/jvalentini/speak-strong/issues"
  },
  "scripts": {
    "dev": "bun run --cwd packages/cli dev",
    "build": "bun run build:core && bun run build:cli",
    "build:core": "bun run --cwd packages/core build",
    "build:cli": "bun run --cwd packages/cli build",
    "build:outlook": "bun run --cwd packages/outlook build",
    "build:binaries": "bun run --cwd packages/cli build:binaries",
    "test": "bun run --cwd packages/cli test",
    "test:coverage": "bun run --cwd packages/cli test:coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "oxlint": "oxlint .",
    "typecheck": "bun run typecheck:core && bun run typecheck:cli",
    "typecheck:core": "bun run --cwd packages/core typecheck",
    "typecheck:cli": "bun run --cwd packages/cli typecheck",
    "check": "bun run typecheck && bun run lint && bun run oxlint",
    "check:all": "bun run check && bun run test:coverage"
  },
  "keywords": [
    "cli",
    "language",
    "communication",
    "writing",
    "confidence",
    "text-processing",
    "typescript",
    "outlook",
    "office-addin"
  ],
  "author": "Justin Valentini",
  "license": "ISC",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "lefthook": "^2.0.13",
    "oxlint": "^1.38.0",
    "typescript": "^5.0.0"
  }
}
